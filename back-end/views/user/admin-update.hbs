<div class="row d-flex justify-content-center">
    <div class="col col-md-5">
        <h4>Spremeni profil uporabnika</h4>
        <hr>
        <form action="updateUser" method="post">
            <fieldset>

                <div class="form-group row">
                    <label for="user1" class="col-sm-2 col-form-label">User ID: </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="user1" name="user_id" placeholder="Id uporabnika"
                            required="">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="email1" class="col-sm-2 col-form-label">E-mail: </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="email1" name="email" placeholder="E-mail"
                            required="">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="username1" class="col-sm-2 col-form-label">Uporabni≈°ko: </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="username1" name="username" placeholder="Username"
                            required="">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="password1" class="col-sm-2 col-form-label">Geslo: </label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="password1" name="password"
                            placeholder="Password" required="">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="racun">Izberi tip racuna:</label>
                    <select class="col-sm-10 form-control" id="racun" name="racun">
                        <option value="uporabnik">Lastnik paketnika</option>
                        <option value="dostavljalec">Dostavljalec</option>
                    </select>
                </div>

                <div class="form-group row">
                    <div class="col-sm-12">
                        <input type="submit" class="btn btn-block btn-success" value="Posodobi">
                    </div>
                </div>
                <fieldset>
        </form>
    </div>
</div>